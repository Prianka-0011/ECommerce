@model EcommerceProject.Models.ProductTypes
@{
    ViewData["Title"] = "Details";
}

<h1>View Product Type Details</h1>
<div class="border p-4 rounded">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="ProductType"></label>
        <input readonly="readonly" asp-for="ProductType" class="form-control" />
    </div>
    <span asp-validation-for="ProductType"></span>
    <div class="form-group">
        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Id"><i class="far fa-edit"></i></a>
        <a asp-action="Index" class="btn btn-info"><i class="fas fa-undo"></i></a>

    </div>
</div>



