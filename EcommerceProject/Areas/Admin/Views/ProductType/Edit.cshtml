@model EcommerceProject.Models.ProductTypes
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Product</h1>
<form asp-action="Edit" method="post">
    <div class="border p-4 rounded">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="text-danger" asp-for="Type"></label>
            <input asp-for="Type" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="Type"></span>
        <div class="form-group">
            <button class="btn btn-danger" type="submit"><i class="far fa-save"></i></i></button>
            <a class=" btn btn-info" asp-action="Index"><i class="fas fa-undo"></i></a>
        </div>
    </div>
</form>
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var msg = '@TempData["msg"]';
            if (msg != null) {
               alertify.warning(msg);
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");
    }

}

