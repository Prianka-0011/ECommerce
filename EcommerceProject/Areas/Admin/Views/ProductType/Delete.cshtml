@model EcommerceProject.Models.ProductTypes
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div class="border p-4 rounded">
    <div class="form-group row">
        <div class="col-md-2"> <label asp-for="Type"></label></div>
        <input class="col-md-5" asp-for="Type" class="form-control" readonly="readonly" />
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
            <a asp-action="Index" class="btn btn-info"><i class="fas fa-undo"></i></a>
        </div>
    </form>
</div>
