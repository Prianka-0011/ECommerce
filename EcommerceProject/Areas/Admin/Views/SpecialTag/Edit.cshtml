@model EcommerceProject.Models.SpecialTag
@{
    ViewData["Title"] = "Edit";
}

<h1>Create Special Tag</h1>
<form asp-action="Edit" method="post">
    <div class="rounded border p-4">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="TagName"></label>
            <input asp-for="TagName" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="TagName"></span>
        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fas fa-user-edit"></i></button>
            <a asp-action="Index" class="btn btn-warning"><i class="fas fa-undo"></i></a>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");
    }
}