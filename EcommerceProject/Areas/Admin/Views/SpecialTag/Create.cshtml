@model EcommerceProject.Models.SpecialTag
@{
    ViewData["Title"] = "Edit";
}

<h1>Create Special Tag</h1>
<form asp-action="Create" method="post">
    <div class="rounded border p-4">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-md-2"> <label asp-for="TagName"></label></div>
            <div class="col-md-5"><input asp-for="TagName" class="form-control" /></div>
        </div>
        <span class="text-danger" asp-validation-for="TagName"></span>
        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fas fa-plus"></i></button>
            <a asp-action="Index" class="btn btn-warning"><i class="fas fa-undo"></i></a>
        </div>
    </div>
</form>
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var msg = '@TempData["msg"]';
            if (msg != null) {
               alertify.warning(msg);
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");
    }
}