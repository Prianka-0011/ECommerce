@model EcommerceProject.Models.Product
@{
    ViewData["Title"] = "Create";
}


<h1 class="text-info">Create product</h1>
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row form-group">
            <div class="col-md-2"> <label asp-for="Name"></label></div>
            <div class="col-md-5"><input asp-for="Name" class="form-control" /></div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-md-2"><label asp-for="Price"></label></div>
            <div class="col-md-5"> <input asp-for="Price" class="form-control" /></div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-md-2"> <label asp-for="ProductColor"></label></div>
            <div class="col-md-5"> <input asp-for="ProductColor" class="form-control" /></div>
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>

        <div class="row form-group">
            <div class="col-md-2"><label asp-for="Image"></label></div>
            <div class="col-md-5"><input asp-for="Image" type="file" class="form-control" /></div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-md-2"> <label asp-for="ProductTypesId"></label></div>
            @*<input asp-for="ProductTypeId" class="form-control" />*@
            <div class="col-md-5"> <select class="form-control" asp-for="ProductTypesId" asp-items="ViewBag.ProductTypeId"> </select></div>
            <span asp-validation-for="ProductTypesId" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-md-2"> <label asp-for="SpecialTagId"></label></div>
            @*<input asp-for="SpecialTagId" class="form-control" />*@
            <div class="col-md-5">  <select class="form-control" asp-for="SpecialTagId" asp-items="ViewBag.SpecialTagId"></select></div>
            <span asp-validation-for="SpecialTagId" class="text-danger"></span>
        </div>
        <div class="row form-group">
            <div class="col-md-2">  <label asp-for="IsAviable"></label></div>
            <div class="col-md-5"><input asp-for="IsAviable" type="checkbox" /></div>
            <span asp-validation-for="IsAviable" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <button type="submit" class="btn btn-danger">Save</button>
            <a class=" btn btn-info" asp-action="Index"><i class="fas fa-undo"></i></a>
        </div>
    </div>
</form>
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function(){
            var msg = '@TempData["msg"]';
            if (msg != null) {
               alertify.warning(msg);
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial.cshtml");
    }
}