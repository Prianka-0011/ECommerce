@model EcommerceProject.Models.Product
@{
    ViewData["Title"] = "Details";
}

<br />

<h2 class="text-info">Product Details</h2>
<form asp-action="Detail" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-md-7">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-8">
                    <input type="hidden" asp-for="Id" />
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Price" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @*<div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Image"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Image" class="form-control" type="file" />
                    </div>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>*@
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="ProductColor" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label>Category</label>
                </div>
                <div class="col-8">
                    @*<select asp-for="ProductTypeId" asp-items="ViewBag.productTypeId" class="form-control"></select>*@
                    <input asp-for="ProductTypes.Type" readonly="readonly" class="form-control" />
                </div>
                <span asp-validation-for="ProductTypes" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <span>Quantity</span>

                    <a asp-action="IncreaseQuentity" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fas fa-plus"></i></a>

                    <a asp-action="DecreaseQuentity" asp-route-id="@Model.Id" class="btn btn-danger"><i class="fas fa-minus"></i></a>

                </div>
                <div class="col-md-8">
                    @if (Model.IsAviable)
                    {
                        <input type="submit" class="btn btn-danger" value="Add To Card" />
                    }
                    else
                    {
                        <input type="submit" class="btn btn-danger" disabled value="Add To Card" />
                    }

                    <a asp-action="Index" class="btn btn-success">Back To List</a>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <img src="~/@Model.Image" style="border:1px solid #efefef ;height:200px;width:200px;border-radius:5px;" />
            @if (Model.IsAviable)
            {
                <img src="~/Images/instock.png" style="width:208px;height:58px" />
            }
            else
            {
                <img src="~/Images/outstock.jpg" style="width:208px;height:80px" />
            }
        </div>
    </div>
</form>



